{
  "name": "site",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync && husky",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check . && eslint .",
    "lint:fix": "prettier --ignore-path .gitignore --write . && eslint --fix .",
    "ci": "npm run lint && npm run check && npm run build",
    "e2e": "playwright test"
  },
  "devDependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@playwright/test": "^1.54.2",
    "@sveltejs/adapter-static": "3.0.9",
    "@sveltejs/kit": "2.31.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/vite": "^4.1.12",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.11.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "mdsvex": "^0.12.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prism-themes": "^1.9.0",
    "svelte": "^5.38.1",
    "svelte-check": "^4.3.1",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^4.1.12",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,cjs,mjs,svelte}": [
      "npm run check",
      "npm exec prettier -- --ignore-path .gitignore --write",
      "npm exec eslint -- --fix"
    ]
  }
}
